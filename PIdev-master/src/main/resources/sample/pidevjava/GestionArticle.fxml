<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>

<BorderPane prefHeight="463.0" prefWidth="1152.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.pidevjava.controller.GestionArticleController">

    <center>
        <ScrollPane>
            <content>
            <AnchorPane prefHeight="310.0" prefWidth="682.0">
               <children>
                      <TilePane fx:id="articleContainer" alignment="center" hgap="40" layoutX="170.0" prefHeight="310.0" prefWidth="818.0" vgap="40">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </TilePane>
                  <ImageView fitWidth="170.0" pickOnBounds="true" preserveRatio="true" AnchorPane.topAnchor="0.0">
                     <image>
                        <Image url="@images/img.jpg" />
                     </image>
                  </ImageView>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </AnchorPane>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox prefWidth="997.0" spacing="10">
            <Button onAction="#handleRefresh" text="Refresh" />
            <Button onAction="#handleAjouterArticle" text="Ajouter un Article" />
        </HBox>
    </bottom>
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
    </padding>
    <stylesheets>
        <URL value="@../../CSS/style.css" />
    </stylesheets>
   <top>
      <AnchorPane prefHeight="94.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="100.0" fitWidth="1000.0" layoutX="-1.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true" />
         </children></AnchorPane>
   </top>
</BorderPane>
