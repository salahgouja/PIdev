<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>

<?import javafx.scene.layout.VBox?>
<BorderPane prefHeight="644.0" prefWidth="717.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.pidevjava.controller.GestionArticleController">

    <top>
        <AnchorPane prefHeight="100.0" prefWidth="1000.0">
            <children>

                <ImageView fitHeight="106.0" fitWidth="1602.0" layoutX="-50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/test3.png" />

                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </top>

    <left>
        <AnchorPane prefHeight="100.0" prefWidth="100.0">
            <children>

                <ImageView fitHeight="2000.0" fitWidth="101.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/test1.png" />

                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </left>

    <right>
        <AnchorPane prefHeight="100.0" prefWidth="100.0">
            <children>

                <ImageView fitHeight="497.0" fitWidth="135.0" layoutX="0.0" layoutY="0.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/test1.png" />

                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </right>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Search by title" />
                <Button onAction="#handleSearch" text="Search" />
            </HBox>
            <ScrollPane prefHeight="490.0" prefWidth="1037.0">
                <content>
                    <AnchorPane prefHeight="310.0" prefWidth="682.0">
                        <children>
                            <TilePane fx:id="articleContainer" alignment="center" hgap="40" layoutX="-14.0" prefHeight="480.0" prefWidth="994.0" vgap="40">
                                <opaqueInsets>
                                    <Insets />
                                </opaqueInsets>
                            </TilePane>
                        </children>
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                    </AnchorPane>
                </content>
            </ScrollPane>
        </VBox>
    </center>

    <bottom>
        <HBox prefWidth="997.0" spacing="10">
            <Button onAction="#handleRefresh" text="Refresh" />
            <Button onAction="#handleAjouterArticle" text="Ajouter un Article" />
        </HBox>
    </bottom>

    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
    </padding>

    <stylesheets>
        <URL value="@../../CSS/style.css" />
    </stylesheets>
</BorderPane>
